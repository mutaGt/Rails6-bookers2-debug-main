<table class="table table-hover table-inverse">
  <% if @range == "User" %>
  <tbody>
    <h2>Users search for "<%= @search %>"  </h2>
    <% @users.each do |user| %>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Introduction</th>
    </tr>
    <tr>
      <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
      <td><%= link_to user.name,user_path(user.id) %></td>
      <td><%= user.introduction %></td>
    </tr>
    <% end %>
  </tbody>
  <% else %>
  
  <tbody>
    <h2>Books search for "<%= @search %>" </h2>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
      <td><%= link_to book.title,book_path(book.id), class: "book_#{book.id}" %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
  <% end %>
</table>